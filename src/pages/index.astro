---
import Layout from "~/layouts/PageLayout.astro";

import Hero from "~/components/widgets/Hero.astro";
import CallToAction from "~/components/widgets/CallToAction.astro";
import Features3 from "~/components/widgets/Features3.astro";
import Brands from "~/components/widgets/Brands.astro";

const metadata = {
  title: "Team Odyssey",
};
---

<Layout metadata={metadata}>
  <Hero
    tagline="Team Odyssey"
    actions={[
      {
        variant: "primary",
        target: "_blank",
        text: "Sponsor Us",
        href: "#contact",
        icon: "tabler:heart-handshake",
      },
      { text: "Learn more", href: "/about" },
    ]}
    image={{ src: "~/assets/images/rover.png", alt: "AstroWind Hero Image" }}
  >
    <Fragment slot="title">
      Meet our rover <span class="text-secondary dark:text-white">Skanda</span>
    </Fragment>

    <Fragment slot="subtitle">
      Hey there, we're the official rover team at Amrita University Bangalore.
      We're finalists for IRC 2026.
    </Fragment>

    <Fragment slot="image"> </Fragment>
  </Hero>

  <Features3
    title="Sponsor Us"
    subtitle="Get in touch with us to discuss ways you can help fund our efforts."
    columns={4}
    id="contact"
    items={[
      {},
      {
        title: "Email Us",
        icon: "tabler:mail",
        href: "mailto:rover_avvb@blr.amrita.edu",
      },
      {
        title: "Connect With Us",
        icon: "tabler:brand-linkedin",
        href: "https://www.linkedin.com/in/avv-b-rover-team/",
      },
      {},
    ]}
  />
</Layout>
